<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.softwaretrajectory.msr.stack.persistence">

  <insert id="saveVote" parameterType="com.softwaretrajectory.msr.stack.persistence.Vote"
    useGeneratedKeys="true" keyProperty="id">
    INSERT INTO
    votes
    ( `id`, `userId`, `postId`, `creationDate`,
    `voteTypeId`, `bountyAmount`)
    VALUES
    (#{id}, #{userId}, #{postId}, #{creationDate,
    javaType=javax.xml.datatype.XMLGregorianCalendar,
    jdbcType=TIMESTAMP,
    typeHandler=com.softwaretrajectory.msr.stack.persistence.XMLGregorianCalendarTypeHandler},
    #{voteTypeId}, #{bountyAmount}
    )
  </insert>

</mapper>