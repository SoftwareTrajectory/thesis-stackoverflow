<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.hawaii.senin.stack.persistence">

  <insert id="saveBadge" parameterType="edu.hawaii.senin.stack.persistence.Badge"
    useGeneratedKeys="true" keyProperty="id">
    INSERT INTO
    badges
    (`id`, `userId`, `name`, `date`)
    VALUES
    (#{id}, #{userId}, #{name}, #{date,
    javaType=javax.xml.datatype.XMLGregorianCalendar,
    jdbcType=TIMESTAMP,
    typeHandler=edu.hawaii.senin.stack.persistence.XMLGregorianCalendarTypeHandler})
  </insert>

</mapper>